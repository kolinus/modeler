<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>/pentaho-modeler/lib</outputDirectory>
      <includes>
        <include>pentaho-modeler-${project.version}.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/pentaho-modeler-${project.version}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>agilebi/**</include>
        <include>pentaho-modeler/**</include>
        <include>WEB-INF/**</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>